# Core
APP_NAME="Better Auth Starter"
APP_WEB_URL="http://localhost:3001"
BETTER_AUTH_URL="http://localhost:3000"
BETTER_AUTH_SECRET="REPLACE_WITH_A_STRONG_SECRET_BASE64"

# Database / Redis
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DBNAME"
REDIS_URL="redis://:PASSWORD@HOST:6379"

# Email (Resend). If unset, emails are logged to console.
RESEND_API_KEY=""
EMAIL_FROM="no-reply@example.com"

# Email allow/deny lists (comma-separated; optional)
EMAIL_ALLOWLIST=""
EMAIL_ALLOW_DOMAINS=""
EMAIL_DENYLIST=""
EMAIL_DENY_DOMAINS=""

# Passkeys (WebAuthn; optional but recommended in production)
PASSKEY_RP_ID="localhost"
PASSKEY_ORIGIN="http://localhost:3001"
PASSKEY_RP_NAME="Better Auth Starter"

# CAPTCHA (Better Auth official plugin; optional)
# Protected endpoints default to: /sign-up/email,/sign-in/email,/request-password-reset
CAPTCHA_ENDPOINTS="/sign-up/email,/sign-in/email,/request-password-reset"

# Cloudflare Turnstile (optional)
CLOUDFLARE_TURNSTILE_SECRET_KEY=""
CLOUDFLARE_TURNSTILE_SITEVERIFY_URL_OVERRIDE=""

# Google reCAPTCHA (optional)
GOOGLE_RECAPTCHA_SECRET_KEY=""
GOOGLE_RECAPTCHA_MIN_SCORE="0.5"
GOOGLE_RECAPTCHA_SITEVERIFY_URL_OVERRIDE=""

# Stripe (optional)
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
STRIPE_PRICE_ID=""
STRIPE_SUCCESS_URL="http://localhost:3001/billing/success"
STRIPE_CANCEL_URL="http://localhost:3001/billing/cancel"
STRIPE_RETURN_URL="http://localhost:3001/settings/billing"
